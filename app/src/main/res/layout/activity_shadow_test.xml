<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.shadowLayer.ShadowTest">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/ed_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_layer"
                android:hint="阴影输入框"
                android:minWidth="200dp"
                android:minHeight="40dp"
                android:paddingLeft="5dp" />

            <com.example.diyviewstudy.view.shadowLayer.ShadowView
                android:id="@+id/shadowView"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:padding="20dp" />

            <com.example.diyviewstudy.view.shadowLayer.ShadowView2
                android:id="@+id/shadowView2"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:padding="20dp" />

            <com.example.diyviewstudy.view.shadowLayer.ShadowView3
                android:id="@+id/shadowView3"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:padding="20dp" />
            <com.example.diyviewstudy.view.shadowLayer.ShadowView4
                android:id="@+id/shadowView4"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:padding="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>